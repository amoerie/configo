<MudDialog>
    <DialogContent>
        <MudText GutterBottom="true">
            Are you sure you want to delete <strong>@ThingThatWillBeDeleted</strong>?
        </MudText>
        <MudAlert Severity="Severity.Warning">
            This cannot be undone!
        </MudAlert>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@NoButtonLabel</MudButton>
        <MudButton Color="Color.Error" OnClick="Submit">@YesButtonLabel</MudButton>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter]
    IMudDialogInstance? MudDialog { get; set; }

    [Parameter]
    public string? ThingThatWillBeDeleted { get; set; }

    [Parameter] public string? YesButtonLabel { get; set; } = "Yes, delete it forever";

    [Parameter] public string? NoButtonLabel { get; set; } = "No, I changed my mind";

    void Submit()
    {
        MudDialog!.Close(DialogResult.Ok(true));
    }

    void Cancel()
    {
        MudDialog!.Cancel();
    }

}
