@page "/"
@using Microsoft.AspNetCore.Components.Web
@namespace Configo.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <!-- Old school libs -->
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    
    <!-- Blazor libs -->
    <link rel="stylesheet" href="_content/Blazorise/blazorise.css?v=1.3.2.0" />
    <link rel="stylesheet" href="_content/Blazorise.Bootstrap/blazorise.bootstrap.css?v=1.3.2.0" />

    <!-- Old school css -->
    <link rel="stylesheet" href="~/css/grid-table.css"  />
    <link rel="stylesheet" href="~/css/tag-groups.css" />
    <link rel="stylesheet" href="~/css/tags.css"  />
    
    <!-- Blazor component isolated css -->
    <link rel="stylesheet" href="Configo.styles.css" />
    
    <link rel="icon" type="image/png" href="favicon.png"/>
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
    <script src="~/lib/jquery/jquery.slim.min.js" type="text/javascript"></script>
    <script src="~/lib/popper.js/umd/popper.min.js" type="text/javascript"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
</body>
</html>
